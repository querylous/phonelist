<% totalNum = @numbers.length  
   colSize = totalNum / 3 
   
   @numbers.each do |number|
     num = number[:phone_no]
     if num.to_s.length == 10
       number[:phone_no] = num.to_s[0..2] + "-" + num.to_s[3..5] + "-" + num.to_s[6..9]
     elsif num.to_s.length == 7
       number[:phone_no] = num.to_s[0..2] + "-" + num.to_s[3..6]
     end
   end
%> 

<%= render partial: 'phonelist/table', locals: { numbers: @numbers[1..colSize]  } %> 
<%= render partial: 'phonelist/table', locals: { numbers: @numbers[(colSize + 1)..(colSize + colSize)]  } %> 
<%= render partial: 'phonelist/table', locals: { numbers: @numbers[(colSize + colSize + 1)..totalNum]  } %> 
        
